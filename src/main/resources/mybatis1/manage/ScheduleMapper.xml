<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ScheduleMapper">
	
	<!--表名 -->
	<sql id="tableName">
		Z_SCHEDULE
	</sql>
	
	<!-- 字段 -->
	<sql id="Field">
		TIMEDURING,	
		GRADE,	
		SUBJECT,	
		TEATHER_NAME,	
		SCHOOL_ID,	
		CLASSROOM,	
		SCHEDULE_ID
	</sql>
	
	<!-- 字段值 -->
	<sql id="FieldValue">
		#{TIMEDURING},	
		#{GRADE},	
		#{SUBJECT},	
		#{TEATHER_NAME},	
		#{SCHOOL_ID},	
		#{CLASSROOM},	
		#{SCHEDULE_ID}
	</sql>
	
	<!-- 新增-->
	<insert id="save" parameterType="pd">
		insert into 
	<include refid="tableName"></include>
		(
	<include refid="Field"></include>
		) values (
	<include refid="FieldValue"></include>
		)
	</insert>
	
	<!-- 删除-->
	<delete id="delete" parameterType="pd">
		delete from
		<include refid="tableName"></include>
		where 
			SCHEDULE_ID = #{SCHEDULE_ID}
	</delete>
	
	<!-- 修改 -->
	<update id="edit" parameterType="pd">
		update
		<include refid="tableName"></include>
		set 
			TIMEDURING = #{TIMEDURING},
			GRADE = #{GRADE},
			SUBJECT = #{SUBJECT},
			TEATHER_NAME = #{TEATHER_NAME},
			CLASSROOM = #{CLASSROOM}
		where 
		SCHEDULE_ID = #{SCHEDULE_ID}
	</update>
	
	<!-- 通过ID获取数据 -->
	<select id="findById" parameterType="pd" resultType="pd">
		select 
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 
			SCHEDULE_ID = #{SCHEDULE_ID}
	</select>
	
	<!-- 列表 -->
	<select id="datalistPage" parameterType="page" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		where 1=1
		<if test="pd.keywords!= null and pd.keywords != ''"><!-- 关键词检索 -->
			and
				(
				<!--	根据需求自己加检索条件
					字段1 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%')
					 or 
					字段2 LIKE CONCAT(CONCAT('%', #{pd.keywords}),'%') 
				-->
				)
		</if>
		AND SCHOOL_ID = #{pd.SCHOOL_ID}
		order by TIMEDURING
	</select>
	
	<!-- 列表(全部) -->
	<select id="listAll" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		WHERE SCHOOL_ID = #{SCHOOL_ID}
	</select>
	
	<!-- 通过筛选条件查询信息 -->
	<select id="listByParam" parameterType="pd" resultType="pd">
		select
		<include refid="Field"></include>
		from 
		<include refid="tableName"></include>
		
		WHERE SCHOOL_ID = #{SCHOOL_ID}
		<if test="TIMEDURING != null and TIMEDURING !=''">
			and TIMEDURING = #{TIMEDURING}
		</if>
		<if test="GRADE != null and GRADE !=''">
			and GRADE = #{GRADE}
		</if>
		<if test="SUBJECT != null and SUBJECT !=''">
			and SUBJECT = #{SUBJECT}
		</if>
		<if test="TEATHER_NAME != null and TEATHER_NAME !=''">
			and TIMEDURING = #{TIMEDURING}
		</if>
	</select>
	
	<!-- 批量删除 -->
	<delete id="deleteAll" parameterType="String">
		delete from
		<include refid="tableName"></include>
		where 
			SCHEDULE_ID in
		<foreach item="item" index="index" collection="array" open="(" separator="," close=")">
                 #{item}
		</foreach>
	</delete>
	
	<!-- fh313596790qq(青苔) -->
</mapper>